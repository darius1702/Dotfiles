# -*- mode: conf-space -*-

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
	rofi -show run -monitor -1

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# volume and backlight
XF86AudioRaiseVolume
        pactl  -- set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
        pactl -- set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
        pactl -- set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
        pactl -- set-source-mute 0 toggle
XF86Display
        arandr
XF86MonBrightnessUp
        brightnessctl s 10+
XF86MonBrightnessDown
        brightnessctl s 10-

# screenshots
Print
        maim --select | xclip -selection clipboard -t image/png
Shift+Print
        maim --select | swappy -f - -o - | xclip -selection clipboard -t image/png

# programs and scripts
super + e
      emacsclient -c -n -a ""
super + n
      emacsclient -c ~/Notes/index.org || notify-send "ERROR" "No emacs daemon running"

super + shift + b
      firefox

super + b
      ~/.config/sxhkd/books.sh
super + shift + s
      ~/.config/sxhkd/pdfs.sh

#
# bspwm hotkeys
#

# lock
super + ctrl + l
      ~/Dotfiles/i3/.config/i3/lock.sh

# restart bspwm
super + shift + r
	bspc wm -r

# close window
super + q
	bspc node -c

# fullscreen
super + f
        bspc node -t \~fullscreen

# swap the current node and the biggest window
super + space
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + shift + space
      bspc node -t \~floating

# set the node flags
super + s
      bspc node -g sticky

super + alt + {h,j,k,l}
      ~/.config/sxhkd/resize.sh {left, down, up, right} 20

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }o
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {Tab,grave}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus montior
super + {comma,period}
      bspc monitor -f {west, east}

# send to monitor
super + shift + {comma,period}
      bspc node -m {west, east} --follow
